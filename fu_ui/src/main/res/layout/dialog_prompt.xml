<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="137dp"
    android:orientation="vertical"
    android:background="@drawable/bg_confirm_dialog">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/dialog_guide_bg_seg_green"
        android:textColor="@color/btn_live_photo_text"
        android:textSize="15sp"  />

    <View
        android:layout_width="265dp"
        android:layout_height="1dp"
        android:background="@color/divider_line_color2"  />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/dialog_i_know"
        android:textColor="@color/main_color"
        android:textSize="16sp" />



</LinearLayout>