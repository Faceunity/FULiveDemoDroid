<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x462"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x365"
        android:background="@color/primary_list"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_fine_sticker"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x364"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingBottom="@dimen/x1" />

        <View
            android:id="@+id/lfs_driver_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/divider_line_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x98"
        android:background="@color/primary_list">

        <LinearLayout
            android:id="@+id/lfs_tool_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x98"
            android:background="@color/primary_list"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_delete_all"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginEnd="@dimen/x20"
                android:background="@drawable/bg_rv_item_fine_sticker"
                android:src="@mipmap/icon_control_delete_all" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x50"
                android:layout_gravity="center_vertical"
                android:background="@color/divider_line_color" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_fine_sticker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x98"
                android:layout_gravity="center_vertical"
                app:tabIndicator="@null"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/main_color"
                app:tabTextColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
